<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.grigori.fitnessapp.ProfileChangeActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/profile_change_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/profile_change_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <TextView
        android:id="@+id/profile_change_password_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New password"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/profile_change_password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/profile_change_about_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="About me"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/profile_change_about_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/profile_change_gender_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/profile_change_gender_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/profile_change_birth_date_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Birth date"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/profile_change_birth_date_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date" />

    <Button
        android:id="@+id/profile_change_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Save"
        android:layout_marginTop="48dp"
        android:onClick="onSaveProfileChangesClicked"/>

</LinearLayout>
