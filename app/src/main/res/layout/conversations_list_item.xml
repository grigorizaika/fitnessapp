<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/conversations_list_profile_pic_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"/>
        <TextView
            android:id="@+id/conversations_list_username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/conversations_list_profile_pic_iv"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"/>
        <TextView
            android:id="@+id/conversations_list_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:text="Date"
            android:textColor="#999999"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/conversations_list_last_message_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last message text"
        android:layout_margin="8dp"/>

</LinearLayout>